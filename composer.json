{
  "name": "thomasthomassen/meta-php-service",
  "description": "PHP service for Meta/Instagram/Facebook integrations (Instagram hashtag fetch endpoint).",
  "type": "project",
  "require": {
    "php": ">=8.1",
    "guzzlehttp/guzzle": "^7.9",
    "vlucas/phpdotenv": "^5.6"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "scripts": {
    "start": "php -S 127.0.0.1:8080 -t public public/index.php",
    "token:refresh": "php scripts/refresh_token.php",
    "post-install-cmd": [
      "@php -r \"if(!is_dir('var/cache')) mkdir('var/cache', 0777, true); if(!is_dir('var/log')) mkdir('var/log', 0777, true);\""
    ],
    "post-update-cmd": [
      "@php -r \"if(!is_dir('var/cache')) mkdir('var/cache', 0777, true); if(!is_dir('var/log')) mkdir('var/log', 0777, true);\""
    ]
  },
  "minimum-stability": "stable",
  "license": "MIT"
}
